#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps
set -o errexit    # always exit on error
set -o nounset    # fail on unset variables

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)
LOG_FILE='/tmp/node-build-log.txt'


indent() {
  sed -u 's/^/       /'
}

echo "-----> Found add-on vco-backup"

#compress actual code
tar -cvzf /tmp/backup.tgz $1 > /dev/null
echo "create the dir"
mkdir ${BUILD_DIR}/backup
echo "move backup"
mv /tmp/backup.tgz ${BUILD_DIR}/backup/

#echo "dataToBackup" >> ${BUILD_DIR}/backup/data.txt
echo "ls data"
ls ${BUILD_DIR}/backup | indent

### Load dependencies
source ${BP_DIR}/lib/output.sh

### Install node dependencies
npm install | output "$LOG_FILE"

BUILD_DIR=${BUILD_DIR} \
CACHE_DIR=${CACHE_DIR} \
ENV_DIR=${ENV_DIR} \
SOURCE_VERSION=${SOURCE_VERSION} \
node ${BP_DIR}/lib/upload.js | output "$LOG_FILE"

exit 1








