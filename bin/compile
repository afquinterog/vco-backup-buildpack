#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a vco-backup"

# if hello.txt is empty, abort the build
if [ ! -s $1/vco-backup ]; then
  echo "vco-backup was empty" | indent
  exit 1
fi


#get file name from vco-backup
FILE_NAME="`cat $1/vco-backup`"

#compress actual code
tar -cvzf /tmp/${FILE_NAME}.tgz $1

mv /tmp/${FILE_NAME}.tgz $1
